<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">
        <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
            Editar porcion
        </h3>
    </div>
</div>
<link rel="stylesheet" href="/css/teams.css">
<div class="card-body">
    <form action="/teams/edit-teams/{{team.id}}" method="POST">
        <div id="logo"></div>
        <div id="title">Crear</div>
        <div id="sub-title">porcion a ser agregado</div>
        <div id="input">
            <div id="inputBox">
                <label>nombre porcion</label>
                <input type="text" value="{{porcion.nombre_porcion}}" name="nombre_porcion" class="form-control"
                    placeholder="nombre porcion" />
            </div>
            <div id="inputBox">
                <label>descripcion</label>
                <input type="text" value="{{porcion.descripcion}}" name="descripcion" class="form-control"
                    placeholder="descripcion" />
            </div>
            <div id="inputBox">
                <label>precio</label>
                <input type="text" value="{{porcion.precio}}" class="form-control" name="precio"
                    placeholder="precio" autofocus />
            </div>
            <div id="inputBox">
                <input type="submit" value="Guardar" />
            </div>
        </div>
    </form>
</div>
</div>
</div>
</div>




