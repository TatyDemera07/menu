<link rel="stylesheet" href="/css/cards.css">
<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">
        <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
            Lista de dueños
        </h3>
    </div>
</div>
<a class="color" href="/dueños/add">Añadir equipo </a>
{{#each dueños}}
<div class="card-body">
    <p>{{nombre_dueño}}</p>
    <p>{{apellido_dueño}}</p>
     {{#if foto}}
    <img class="card__image" src="/{{foto}}" loading="lazy" alt="User Profile">
    {{else}}
    <img src="/not-found/not-found-image.png" class="card__image" alt="..." alt="User Profile">
    {{/if}}
    <p>{{correo_electronico}}</p>
    <p>{{telefono}}</p>
    <center>
        <a href="/dueños/delete-dueños/{{id}}" class="danger">Eliminar</a>
        <a href="/dueños/edit-dueños/{{id}}" class="secondary">Editar</a>
        <form action="/dueños/foto-dueño/{{id}}" method="POST" encType="multipart/form-data">
            <input type="file" name="sampleFile" accept="image/*" />
            <input type="submit">
        </form>
    </center>
</div>
{{else}}
<center> <p>No hay registro guardados a un </p>
    <a href="/dueños/add"> Agrega uno haciendo click aqui</a>
</center>
{{/each}}


