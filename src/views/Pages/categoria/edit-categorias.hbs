<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">
        <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
            Editar categoria
        </h3>
    </div>
</div>
<link rel="stylesheet" href="/css/teams.css">
<div class="card-body">
    <form action="/categorias/edit-teams/{{team.id}}" method="POST">
        <div id="logo"></div>
        <div id="title">Crear</div>
        <div id="sub-title">categoria a ser agregado</div>
        <div id="input">
            <div id="inputBox">
                <label>Nombre categoria</label>
                <input type="text" value="{{categoria.nombre_Categoria}}" name="nombre_Categoria" class="form-control"
                    placeholder="Nombre categoria" />
            </div>
            <div id="inputBox">
                <label>Descripcion</label>
                <input type="text" value="{{categoria.descripcion}}" name="descripcion" class="form-control"
                    placeholder="descripcion" />
           </div>            
            <div id="inputBox">
                <input type="submit" value="Guardar" />
            </div>
        </div>
    </form>
</div>
</div>
</div>
</div>




