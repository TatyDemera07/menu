<div class="col-md-12" style="margin-bottom: 5px; ">
    <div class="card text-center border border-primary">
        <h3 class="card-title text-uppercase" style="color: rgb(44, 142, 253);">
            Editar bebidas
        </h3>
    </div>
</div>
<link rel="stylesheet" href="/css/teams.css">
<div class="card-body">
    <form action="/bebidas/edit-bebidas/{{bebida.id}}" method="POST">
        <div id="logo"></div>
        <div id="title">Crear</div>
        <div id="sub-title">bebida a ser agregado</div>
        <div id="input">
            <div id="inputBox">
                <label>Nombre bebida</label>
                <input type="text" value="{{bebida.nombre_bebida}}" name="nombre_bebida" class="form-control"
                    placeholder="Nombre Bebidas" />
            </div>
            <div id="inputBox">
                <label>Descripcion</label>
                <input type="text" value="{{bebida.descripcion}}" class="form-control" name="descripcion"
                    placeholder="Descripcion" autofocus />
            </div>
            <div id="inputBox">
                <label>Precio</label>
                <input type="text" value="{{bebida.precio}}" name="Precio" class="form-control" placeholder="Precio" />

                <div id="inputBox">
                    <input type="submit" value="Guardar" />
                </div>
            </div>
    </form>
</div>
</div>
</div>
</div>